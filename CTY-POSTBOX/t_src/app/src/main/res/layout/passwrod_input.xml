<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/t50white">

    <LinearLayout
        android:layout_width="600px"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_round_conner"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/rg_type"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginTop="20dip"
            android:gravity="center"
            android:visibility="visible"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_type1"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:checked="true"
                android:textColor="@color/black"
                android:text="@string/kdg1"/>

            <RadioButton
                android:id="@+id/rb_type2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dip"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="@string/kdg2"/>
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="请输入安装密码"
                android:textColor="@color/colorPrimary"
                android:textSize="33px" />

            <EditText
                android:id="@+id/et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1"
                android:gravity="center"
                android:textSize="33px"
                android:paddingTop="20px"
                android:paddingBottom="20px"
                android:layout_marginLeft="10dip"
                android:background="@drawable/bg_get_meal_tail_input"
                android:textColor="@color/colorPrimary"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="请输入格子数目"
                android:textColor="@color/colorPrimary"
                android:inputType="number"
                android:textSize="33px" />

            <EditText
                android:id="@+id/et_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1"
                android:gravity="center"
                android:textSize="33px"
                android:paddingTop="20px"
                android:paddingBottom="20px"
                android:layout_marginLeft="10dip"
                android:background="@drawable/bg_get_meal_tail_input"
                android:textColor="@color/colorPrimary"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="请输入设备地址"
                android:textColor="@color/colorPrimary"
                android:textSize="33px" />

            <EditText
                android:id="@+id/et_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1"
                android:gravity="center"
                android:textSize="33px"
                android:paddingTop="20px"
                android:paddingBottom="20px"
                android:layout_marginLeft="10dip"
                android:background="@drawable/bg_get_meal_tail_input"
                android:textColor="@color/colorPrimary"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="40px"
            android:background="#E4E4E4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:background="@color/t00white"
            android:orientation="horizontal">

            <Button
                android:id="@+id/no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="No"
                android:background="@color/t00white"
                android:textColor="#7D7D7D"
                android:textSize="16sp" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#E4E4E4" />

            <Button
                android:id="@+id/yes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@color/t00white"
                android:gravity="center"
                android:singleLine="true"
                android:text="Yes"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>