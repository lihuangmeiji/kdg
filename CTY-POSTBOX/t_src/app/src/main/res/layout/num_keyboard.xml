<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_column="3"
    android:divider="@drawable/table_h_divider"
    android:showDividers="middle"
    android:background="#F8F8F8"
    android:id="@+id/num_keyboard">

    <TableRow
        android:showDividers="middle"
        android:layout_weight="1"
        android:divider="@drawable/table_v_divider">

        <TextView
            android:id="@+id/keyboard1"
            style="@style/TvNumKeyboard"
            android:text="1" />
        <TextView
            android:id="@+id/keyboard2"
            style="@style/TvNumKeyboard"
            android:text="2"/>
        <TextView
            android:id="@+id/keyboard3"
            style="@style/TvNumKeyboard"
            android:text="3"/>

    </TableRow>

    <TableRow
        android:showDividers="middle"
        android:layout_weight="1"
        android:divider="@drawable/table_v_divider">

        <TextView
            android:id="@+id/keyboard4"
            android:text="4"
            style="@style/TvNumKeyboard"/>
        <TextView
            android:id="@+id/keyboard5"
            android:text="5"
            style="@style/TvNumKeyboard"/>
        <TextView
            android:id="@+id/keyboard6"
            android:text="6"
            style="@style/TvNumKeyboard"/>

    </TableRow>

    <TableRow
        android:showDividers="middle"
        android:layout_weight="1"
        android:divider="@drawable/table_v_divider">

        <TextView
            android:id="@+id/keyboard7"
            android:text="7"
            style="@style/TvNumKeyboard"/>
        <TextView
            android:id="@+id/keyboard8"
            android:text="8"
            style="@style/TvNumKeyboard"/>
        <TextView
            android:id="@+id/keyboard9"
            android:text="9"
            style="@style/TvNumKeyboard"/>

    </TableRow>

    <TableRow
        android:showDividers="middle"
        android:layout_weight="1"
        android:divider="@drawable/table_v_divider">

        <TextView
            android:id="@+id/keyboard_clear"
            android:text="清除"
            style="@style/TvNumKeyboard"/>
        <TextView
            android:id="@+id/keyboard0"
            android:text="0"
            style="@style/TvNumKeyboard"/>
        <RelativeLayout
            android:id="@+id/keyboard_back"
            style="@style/TvNumKeyboard">
            <ImageView
                android:layout_width="115px"
                android:layout_height="19px" />
        </RelativeLayout>

    </TableRow>

</TableLayout>