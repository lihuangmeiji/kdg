            android:name="TencentMapSDK"
            android:value="DXRBZ-J5SWJ-DPQFO-FSLVC-6CBOK-OHBLH" />
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="4030500" />

        <activity android:name=".ui.admin.AdminHomeActivity" />
        <activity android:name=".ui.admin.AdminFileManagementActivity"></activity>

        <receiver
            android:name=".ui.server.AlarmReceiver"
            android:process=":remote">
            <intent-filter>
                　<action android:name="activity.MyWeathe.alarm"></action> //使用过滤器，接收指定action广播 　　
            </intent-filter>
        </receiver>
    </application>

</manifest>